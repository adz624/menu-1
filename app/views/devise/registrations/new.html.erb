<div id="login-container">
<%= devise_error_messages! %>
		<div class="row">
			<div class="span5" id="login-content">
					<div class="login-header">
						<h2>REGISTER</h2>
					</div>
					<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  					<% # f.error_notification %>
					<div class="control-group">
					    <label class="control-label" for="inputName">姓名</label>
					    <div class="controls">
					      <%= f.text_field :name, required: true, autofocus: true, :class => 'span5', :id => 'inputName', :placeholder => '姓名' %>
					    </div>
					</div>
					<div class="control-group">
					    <label class="control-label" for="inputEmail">Email</label>
					    <div class="controls">
					      <%= f.email_field :email, required: true, autofocus: true, :class => 'span5', :id => 'inputEmail', :placeholder => 'Email' %>
					    </div>
					</div>
					<div class="control-group">
					    <label class="control-label" for="inputPassword">密碼</label>
					    <div class="controls">
					      <%= f.password_field :password, required: true, hint: ("請輸入 #{@minimum_password_length} 個字元的密碼" if @validatable), :id => 'inputPassword', :class => 'span5', :placeholder => '密碼' %>
					    </div>
					</div>
					<div class="control-group">
					    <label class="control-label" for="inputPassword">確認密碼</label>
					    <div class="controls">
					      <%= f.password_field :password_confirmation, required: true, :id => 'inputPassword', :class => 'span5', :placeholder => '再輸入一次密碼' %>
					    </div>
					</div>
					<label class="checkbox span2 login-remeber">
						<input type="checkbox"> 我已閱讀<a href="">使用者條款</a>
					</label>
					<%= f.submit "註冊", :class => 'btn btn-danger float-r' %>
					<% end %>
			</div>
		</div>
	</div>
