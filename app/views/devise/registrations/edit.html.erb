  <!-- 管理區塊 -->
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div id="settings-container">
  <%= devise_error_messages! %>
    <div class="row">
      <div class="span5" id="settings-content">      
          <div id="settings-header">
            <h2>帳戶管理</h2>
          </div>
          <div class="control-group">
              <label class="control-label" for="inputEmail">信箱</label>
              <div class="controls">
                <%= f.email_field :email, autofocus: true,:class=>'span5', :placeholder =>'Email', :id => 'inputEmail' %>
              </div>
          </div>
          <div class="control-group">
              <label class="control-label" for="inputName">姓名</label>
              <div class="controls">
                <%= f.text_field :name, autofocus: true,:class=>'span5', :placeholder =>'name', :id => 'inputName' %>
              </div>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
          <div class="control-group">
              <label class="control-label" for="inputPassword">新密碼</label>
              <div class="controls">
                <%= f.password_field :password, autocomplete: "off", required: false, :id => 'inputPassword', :class => 'span5', :placeholder => '若不更動，請勿填寫' %>
              </div>
          </div>
          <div class="control-group">
              <label class="control-label" for="inputPassword">新密碼確認</label>
              <div class="controls">
                <%= f.password_field :password_confirmation, required: false, :id => 'inputPassword', :class => 'span5', :placeholder => '再輸入一次新密碼' %>
              </div>
          </div>
          <div class="control-group">
              <label class="control-label" for="inputPassword">當前密碼</label>
              <div class="controls">
                <%= f.password_field :current_password, autocomplete: "off", required: true, :class=>'span5', :placeholder =>'請輸入您現在的密碼，以確認您的修改' %>
              </div>
          </div>
          <%= f.submit '更新', :class =>'btn btn-danger float-r' %>
          <%= link_to '返回', root_url, :class => 'btn float-r' %>
      </div>
    </div>
  </div>
  <% end %>