<!-- 置中區塊 -->
<div id="page-container">
	<!-- 上方-選擇項目 -->
	<div id="content-top-choose">			
	</div>
	<div id="usermenu-content">
		<div class="row">
			<!-- 使用者菜單 -->
			<div class="span3 usermenu-block">
				<%= form_for @opinion do |f| %>
					標題:<%= f.text_field :title %>
					內容:<%= f.text_area :content %>
					<%= f.submit '送出' %>
					<%= link_to('返回', opinions_url) %>
				<% end %>
			</div>
		</div>
	</div>
</div><!-- 使用者菜單 結束 -->